<%- model_class = Challenge -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @challenge.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @challenge.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duration) %>:</strong></dt>
  <dd><%= @challenge.duration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:completion_date) %>:</strong></dt>
  <dd><%= @challenge.completion_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @challenge.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:creator) %>:</strong></dt>
  <dd><%= @challenge.creator.try :name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contributor) %>:</strong></dt>
  <dd><%= @challenge.contributor.try :name %></dd>
</dl>

<div class="form-actions">

  <%= link_to t('.back', :default => t("helpers.links.back")),
              challenges_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_challenge_path(@challenge), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              challenge_path(@challenge),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
    <%= render :partial => 'contribute' %>

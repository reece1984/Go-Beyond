<%= simple_form_for @challenge, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :duration, label: "Duration (Days)" %>
  <%= f.input :completion_date %>
  <%= f.input :status, collection: ["High", "Medium", "Low"], as: :radio_buttons  %>

  <%= f.input :contributor_id, :collection => User.all %>

  <div class="form-actions">
    <%= f.error :base %>
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                challenges_path, :class => 'btn' %>
  </div>
<% end %>

<h1>Listing challenges</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Duration</th>
    <th>Completion date</th>
    <th>Status</th>
    <th>User</th>
    <th>Creator</th>
    <th>Contributor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @challenges.each do |challenge| %>
  <tr>
    <td><%= challenge.title %></td>
    <td><%= challenge.description %></td>
    <td><%= challenge.duration %></td>
    <td><%= challenge.completion_date %></td>
    <td><%= challenge.status %></td>
    <td><%= challenge.user_id %></td>
    <td><%= challenge.creator_id %></td>
    <td><%= challenge.contributor_id %></td>
    <td><%= link_to 'Show', challenge %></td>
    <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
    <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


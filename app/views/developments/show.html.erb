<%- model_class = Development -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @development.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @development.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:priority) %>:</strong></dt>
  <dd><%= @development.priority %></dd>
  <dt><strong><%= model_class.human_attribute_name(:developer_id) %>:</strong></dt>
  <dd><%= @development.developer.try :name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mentor_id) %>:</strong></dt>
  <dd><%= @development.mentor.try :name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              developments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_development_path(@development), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              development_path(@development),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

    <%= render :partial => 'mentor' %>